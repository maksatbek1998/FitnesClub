<Page x:Class="FitnesClub.Windows.Persons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitnesClub.Windows"
      mc:Ignorable="d"         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Persons">
    <Grid>
        <Grid Margin="10" Background="White">
            <DataGrid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{DynamicResource grid_xml}" IsReadOnly="True" FontSize="14"  CanUserAddRows="False" ColumnHeaderStyle="{DynamicResource hederstyle}"  VerticalScrollBarVisibility="Auto"  HeadersVisibility="Column"
                   AutoGenerateColumns="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Width="50" />
                    <DataGridTextColumn Header="Ф.И.О" />
                    <DataGridTextColumn Header="Кирген убакыты"/>
                    <DataGridTextColumn Header="Чыккан убакыты"/>
                    <DataGridTextColumn Header="Канча жолу кирди"/>
                    <DataGridTextColumn Header="Бугунку дата"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
